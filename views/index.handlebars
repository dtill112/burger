<div class = "container">

    <div class = "row">
        <div class = "col-sm text-center" id="top-bar">
                <h1><u>Eat The Burger Mane</u></h1>
        </div>        
    </div>

    <div class = "row">
        <div class="col-sm-12 text-center">
        A Don Tillery Production
        </div>
    </div>
    <br>
    <br>
    <div class = "row">
        {{#each burger_data}}
        {{#unless this.devoured}}
            <div class="col-sm-6 col-sm-offset-2 text-center">
                <p>{{this.id}}. {{this.burger_name}}</p>
            </div>

        <div class = "col-sm-5 text-center">
            <form method = "POST" action= "/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text"
                value={{this.id}}>
                
                <button type="submit" class="devour_btn btn-default">
                    DEVOUR THAT 
                </button>
            </form>
        </div>
    
   
            {{/unless}}
            {{/each}}
    </div>
        
    <br>
    <br>

        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}">
                    <br>
                    {{/if}}
                {{/each}}
                <br>
            </div>
        </div>
  

 

        <div class = "row">
            <div class = "col-sm-4 offset-sm-4 text-center">
                <p>Here, enter a burger you want to eat</p>
                    <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control"
                    value="" id="enter_text">
                    <br>
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                    </form>
            </div>
        </div>
    
